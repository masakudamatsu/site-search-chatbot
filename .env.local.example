# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Together AI Configuration (LLM & Embeddings)
TOGETHER_AI_API_KEY=your_together_ai_api_key
NEXT_PUBLIC_CHAT_MODEL=openai/gpt-oss-20b
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct

# Ingestion Automation Configuration
CRON_SECRET=your_secret_token_for_securing_api

# Target URL for crawling and ingestion (set to your desired website)
NEXT_PUBLIC_TARGET_URL=https://example.com/
# CRAWL_LIMIT sets the maximum number of pages to crawl and ingest in one run (default: 1000)
CRAWL_LIMIT=1000
# Optional: If you want to restrict crawling to a specific subdirectory, set it here
# NEXT_PUBLIC_TARGET_URL_SUBDIRECTORY=https://example.com/articles/
# Optional: Set to true if you want to remove query parameters from discovered links
# REMOVE_QUERY_PARAMS=true

# Optional: Custom text separators for the splitter (JSON array format)
# Default for English/Latin: ["\n\n", "\n", ". ", " ", ""]
# Example for Japanese: TEXT_SEPARATORS='["\n\n", "\n", "ã€‚", " ", ""]'
# TEXT_SEPARATORS='["\n\n", "\n", ". ", " ", ""]'
